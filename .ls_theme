#!/bin/bash

# All compressed file types share color
compressed_files=(".tar" ".tar.gz" ".zip" ".tar.xz" ".tar.bz2" ".7zip")
compressed_colors=""
for i in "${compressed_files[@]}"; do
	compressed_colors="$compressed_colors*$i=2;36:"
done

# All NON-directly-executable programs share color 
non_exec_files=(".py" ".js" ".ts" ".jsx" ".tsx" ".c" ".cpp" ".h" ".html" ".css")
non_exec_colors=""
for i in "${non_exec_files[@]}"; do
	non_exec_colors="$non_exec_colors*$i=1;37:"
done

echo "di=4;1;35:ex=3;31:*.py=1;34:$compressed_colors:*=2;38:$non_exec_colors"